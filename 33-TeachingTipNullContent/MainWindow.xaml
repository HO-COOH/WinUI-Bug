<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="_33_TeachingTipNullContent.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_33_TeachingTipNullContent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="33-TeachingTipNullContent">

    <Grid>
        <Button x:Name="Button" Click="Button_Click">Click to open tip</Button>
        <TeachingTip
            x:Name="MyTip"
            Loaded="MyTip_Loaded"
            LayoutUpdated="MyTip_LayoutUpdated"
            Content="Some tip"/>
    </Grid>
</Window>
