<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="_32_Win32FullScreen.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:_32_Win32FullScreen"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="32-Win32FullScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="FullscreenWinUI3Button" Click="FullscreenWinUI3Button_Click">Full screen winui3 window</Button>
        <Button
            x:Name="FullscreenWin32Button"
            Grid.Column="1"
            Click="FullscreenWin32Button_Click">
            Full screen win32 window
        </Button>
    </Grid>
</Window>
